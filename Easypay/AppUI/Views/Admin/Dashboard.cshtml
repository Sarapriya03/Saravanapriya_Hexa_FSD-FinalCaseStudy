@model List<AppUI.Models.Employee>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Dashboard</h2>

        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card text-white bg-primary mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Total Employees</h5>
                        <p class="card-text display-6">@Model.Count</p>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card text-white bg-success mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Total Payroll Configs</h5>
                        <p class="card-text display-6">@ViewBag.PayrollCount</p>
                    </div>
                </div>
            </div>
        </div>

        <h4 class="mb-3">Employee List</h4>
        <ul class="list-group">
            @foreach (var emp in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span><strong>@emp.Name</strong></span>
                    <span class="badge bg-secondary">@emp.Department</span>
                </li>
            }
        </ul>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
