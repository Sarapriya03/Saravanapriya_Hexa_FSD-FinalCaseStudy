@model AppUI.Models.PayrollConfig
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Create Payroll Config</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-4">
        <h2 class="mb-4">Create Payroll Config</h2>

        <form asp-action="CreatePayrollConfig" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label asp-for="EmployeeId" class="form-label">Employee ID</label>
                <input asp-for="EmployeeId" class="form-control" />
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Allowances" class="form-label">Allowances</label>
                <input asp-for="Allowances" class="form-control" />
                <span asp-validation-for="Allowances" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Deductions" class="form-label">Deductions</label>
                <input asp-for="Deductions" class="form-control" />
                <span asp-validation-for="Deductions" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TaxRate" class="form-label">Tax Rate (%)</label>
                <input asp-for="TaxRate" class="form-control" />
                <span asp-validation-for="TaxRate" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">Submit</button>
            <a asp-action="PayrollConfig" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
