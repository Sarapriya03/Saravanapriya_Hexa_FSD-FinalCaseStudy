@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewBag.Title = "Admin Panel";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap 5.3 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <!-- ✅ Top Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="@Url.Action("Dashboard", "Admin")">🏢 Easypay Admin</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarMain">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Dashboard", "Admin")">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Users", "Admin")">Users</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Employees", "Admin")">Employees</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Notifications", "Admin")">Notifications</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("LoginPage", "Admin")">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- ✅ Body Content -->
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar p-3 border-end" style="min-height:100vh;">
                <h4 class="text-primary mb-4">Admin Panel</h4>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Dashboard", "Admin")">📊 Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Users", "Admin")">👤 User Management</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Employees", "Admin")">🧑‍💼 Employee Management</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("PayrollConfig", "Admin")">💸 Payroll Config</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ComplianceReports", "Admin")">📑 Compliance Reports</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Notifications", "Admin")">🔔 Notifications</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("AuditTrail", "Admin")">📜 Audit Trail</a>
                    </li>
                </ul>
            </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="text-dark">Welcome to the Admin Panel</h2>
                    <a href="@Url.Action("LoginPage", "Admin")" class="btn btn-outline-secondary">Logout</a>
                </div>

                <!-- Content Cards -->
                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="card border-primary shadow-sm text-center">
                            <div class="card-body">
                                <h5 class="card-title">Dashboard</h5>
                                <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-primary mt-2">View</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-secondary shadow-sm text-center">
                            <div class="card-body">
                                <h5 class="card-title">Users</h5>
                                <a href="@Url.Action("Users", "Admin")" class="btn btn-secondary mt-2">Manage</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-success shadow-sm text-center">
                            <div class="card-body">
                                <h5 class="card-title">Employees</h5>
                                <a href="@Url.Action("Employees", "Admin")" class="btn btn-success mt-2">Manage</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-info shadow-sm text-center">
                            <div class="card-body">
                                <h5 class="card-title">Payroll Config</h5>
                                <a href="@Url.Action("PayrollConfig", "Admin")" class="btn btn-info mt-2">Manage</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-warning shadow-sm text-center">
                            <div class="card-body">
                                <h5 class="card-title">Compliance Reports</h5>
                                <a href="@Url.Action("ComplianceReports", "Admin")" class="btn btn-warning mt-2">Check</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-danger shadow-sm text-center">
                            <div class="card-body">
                                <h5 class="card-title">Notifications</h5>
                                <a href="@Url.Action("Notifications", "Admin")" class="btn btn-danger mt-2">View</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-dark shadow-sm text-center">
                            <div class="card-body">
                                <h5 class="card-title">Audit Trail</h5>
                                <a href="@Url.Action("AuditTrail", "Admin")" class="btn btn-dark mt-2">Logs</a>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Bootstrap Bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
