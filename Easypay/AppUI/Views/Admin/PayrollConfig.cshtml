@model List<AppUI.Models.PayrollConfig>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>Payroll Configuration</title>
	<!-- Bootstrap 5.3 CSS CDN -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
	<!-- Top Navbar -->
	<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
		<div class="container-fluid">
			<a class="navbar-brand fw-bold" href="@Url.Action("Dashboard", "Admin")">🏢 Easypay Admin</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse justify-content-end" id="navbarMain">
				<ul class="navbar-nav">
					<li class="nav-item">
						<a class="nav-link text-white" href="@Url.Action("HomePanel", "Admin")">Home</a>
					</li>
					<li class="nav-item">
						<a class="nav-link text-white" href="@Url.Action("Users", "Admin")">Users</a>
					</li>
					<li class="nav-item">
						<a class="nav-link text-white" href="@Url.Action("Employees", "Admin")">Employees</a>
					</li>
					<li class="nav-item">
						<a class="nav-link text-white" href="@Url.Action("Notifications", "Admin")">Notifications</a>
					</li>
					<li class="nav-item">
						<a class="nav-link text-white" href="@Url.Action("LoginPage", "Admin")">Logout</a>
					</li>
				</ul>
			</div>
		</div>
	</nav>

	<div class="container mt-4">
		<h2 class="mb-3">Payroll Configuration</h2>
		<div class="mb-3">
			<a asp-action="CreatePayrollConfig" asp-controller="Admin" class="btn btn-primary">Add New Config</a>
		</div>
		<table class="table table-bordered table-striped table-hover">
			<thead class="table-dark">
				<tr>
					<th>EmployeeId</th>
					<th>Allowances</th>
					<th>Deductions</th>
					<th>TaxRate</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var cfg in Model)
				{
					<tr>
						<td>@cfg.EmployeeId</td>
						<td>@cfg.Allowances</td>
						<td>@cfg.Deductions</td>
						<td>@cfg.TaxRate%</td>
					</tr>
				}
			</tbody>
		</table>
	</div>

	<!-- Bootstrap 5.3 JS CDN -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>