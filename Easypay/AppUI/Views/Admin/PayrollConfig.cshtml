@model List<AppUI.Models.PayrollConfig>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>Payroll Configuration</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
	<div class="container mt-4">
		<h2 class="mb-3">Payroll Configuration</h2>
		<div class="mb-3">
			<a asp-action="CreatePayrollConfig" asp-controller="Admin" class="btn btn-primary">Add New Config</a>
		</div>
		<table class="table table-bordered table-striped table-hover">
			<thead class="table-dark">
				<tr>
					<th>EmployeeId</th>
					<th>Allowances</th>
					<th>Deductions</th>
					<th>TaxRate</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var cfg in Model)
				{
					<tr>
						<td>@cfg.EmployeeId</td>
						<td>@cfg.Allowances</td>
						<td>@cfg.Deductions</td>
						<td>@cfg.TaxRate%</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>